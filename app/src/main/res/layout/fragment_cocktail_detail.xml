<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.HomeFragment">

    <ImageView
        android:id="@+id/iv_cocktail_thumbnail"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_margin="12dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_cocktailName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/iv_cocktail_thumbnail"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cocktail name" />

    <TextView
        android:id="@+id/tv_cocktailType"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        app:layout_constraintStart_toEndOf="@id/iv_cocktail_thumbnail"
        app:layout_constraintTop_toBottomOf="@id/tv_cocktailName"
        tools:text="This drink is Alcoholic" />

    <TextView
        android:id="@+id/tv_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/iv_cocktail_thumbnail"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="12dp"
        tools:text="Ingredients: fkfj,sdfj, sdfjd, sdhfs"/>

    <TextView
        android:id="@+id/tv_instruction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_ingredients"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="12dp"
        tools:text="Instruction: mix blah blah."/>


</androidx.constraintlayout.widget.ConstraintLayout>